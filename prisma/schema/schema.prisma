generator client {
  provider        = "prisma-client"
  output          = "../../src/generated/prisma-client"
  // TODO: Add previewFeatures = ["metrics"] when we have somewhere to send the metrics see: https://www.prisma.io/docs/orm/prisma-client/observability-and-logging/metrics
  previewFeatures = ["views", "relationJoins", "nativeDistinct", "typedSql", "strictUndefinedChecks", "fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // TODO: Since we have prisma accelerate, we need to turn this on when we go to production
  // directUrl = env("DATABASE_DIRECT_URL")
  schemas  = ["default", "managed_by_better_auth"]
}
